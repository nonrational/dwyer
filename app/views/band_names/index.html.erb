<div>
    <% if current_user %>
        <%= simple_form_for @band_name do |f| %>
            <%= f.text_field :name, class: "band_name" %>.
            new band name. <%= f.submit "i call it", class: "btn call_it"%>.
        <% end %>

    <% else %>
        <%= link_to "Login With Facebook", "/auth/facebook", id: "sign_in", class: "sign_in_link", width: 50, height: 50 %>
    <% end %>
</div>


<ul class="band_names">
    <%= render @band_names %>
</ul>
<%= paginate @band_names %>
