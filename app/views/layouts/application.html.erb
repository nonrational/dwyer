<!DOCTYPE html>
<html>
<head>
  <title>dwyer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
    <div class="breadcrumbs">
      <%= link_to "dwyer", root_path %>
      <%= yield(:breadcrumbs) if content_for?(:breadcrumbs) %>
    </div>
    <div class="error">
      <%= error %>
    </div>
    <div class="notice">
      <%= notice %>
    </div>
</header>

<%= yield %>
<footer>
    [<%= link_to "dwyer", root_path, style: "text-decoration:underline" %>]
    for <a target="_blank" href="https://twitter.com/kweeston">@kweeston</a>.
    ❤︎  <a target="_blank" href="https://twitter.com/nonrational">@nonrational</a>.
</footer>

<div class="facebook" id="user-widget">
  <% if current_user %>
    <div class="user_image <%= 'admin' if current_user.admin? %>">
        <%= link_to image_tag(current_user.image), signout_path, id: "sign_out", width: 50, height: 50 %>
    </div>
  <% else %>
    <div class="user_image logged_out">
        <%= link_to image_tag('facebook_logo.jpg'), "/auth/facebook", id: "sign_in", class: "sign_in", width: 50, height: 50 %>
    </div>
  <% end %>
</div>

<div class="dwyer">
  <%= image_tag 'chris-pratt-andy-dwyer-tv-happy-parks-and-recreation_small_square_50.gif', width: 50, height: 50 %>
</div>

</body>
</html>
